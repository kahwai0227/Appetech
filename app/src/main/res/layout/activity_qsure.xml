<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Q_Sure">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Reservation Form"
        android:textColor="@color/black"
        android:textSize="30dp"
        android:textStyle="bold"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="60dp"
        android:typeface="serif"/>

    <TextView
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:text="Table 1"
        android:id="@+id/textViewTableNo"
        android:background="@drawable/button_blue"
        android:textColor="@color/white"
        android:textSize="25dp"
        android:textStyle="bold"
        android:layout_marginTop="120dp"
        android:layout_marginLeft="20dp"
        android:gravity="center"
        android:typeface="serif"/>

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tableArea"
        android:layout_below="@+id/textViewTableNo">
        <TextView
            android:id="@+id/textViewName"
            android:layout_width="wrap_content"
            android:layout_height="350dp"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:text="   Name \n\n   Contact  \n\n   Email \n\n   Arked \n\n   Table \n\n   Time \n\n   Date"
            android:background="@drawable/bg_grey"
            android:textColor="@color/white"
            android:textSize="20dp"
            android:textStyle="bold"
            android:typeface="serif"
            android:gravity="center_vertical"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="50.5dp"
            android:id="@+id/name"
            android:text="-"
            android:background="@drawable/bg_lightgrey"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="130dp"
            android:gravity="center"
            android:typeface="serif"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:layout_below="@+id/name"
            android:id="@+id/contact"
            android:text="-"
            android:background="@drawable/bg_lightgrey"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_marginLeft="130dp"
            android:gravity="center"
            android:typeface="serif"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/email"
            android:layout_below="@+id/contact"
            android:text="-"
            android:background="@drawable/bg_lightgrey"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_marginLeft="130dp"
            android:gravity="center"
            android:typeface="serif"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:text="-"
            android:id="@+id/arked"
            android:layout_below="@+id/email"
            android:background="@drawable/bg_lightgrey"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_marginLeft="130dp"
            android:gravity="center"
            android:typeface="serif"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="50dp"
            android:id="@+id/table"
            android:layout_below="@+id/arked"
            android:text="-"
            android:background="@drawable/bg_lightgrey"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_marginLeft="130dp"
            android:gravity="center"
            android:typeface="serif"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="50.5dp"
            android:id="@+id/time"
            android:layout_below="@id/table"
            android:text="-"
            android:background="@drawable/bg_lightgrey"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_marginLeft="130dp"
            android:gravity="center"
            android:typeface="serif"/>

        <TextView
            android:layout_width="250dp"
            android:layout_height="50.5dp"
            android:id="@+id/date"
            android:layout_below="@id/time"
            android:text="-"
            android:background="@drawable/bg_lightgrey"
            android:textColor="@color/white"
            android:textSize="15dp"
            android:layout_marginLeft="130dp"
            android:gravity="center"
            android:typeface="serif"/>
    </RelativeLayout>



    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:layout_below="@+id/tableArea">

        <Button
            android:id="@+id/back4"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Back"
            android:layout_marginLeft="0dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/button_red"
            android:fontFamily="monospace"/>
        <Button
            android:id="@+id/submit_2"
            android:layout_width="130dp"
            android:layout_height="50dp"
            android:text="Submit"
            android:layout_marginLeft="180dp"
            android:textSize="20sp"
            android:textColor="@color/white"
            android:background="@drawable/button_green"
            android:fontFamily="monospace"/>
    </RelativeLayout>

</RelativeLayout>